<h2>Edit Book</h2>

<form action="/books/<%= @book.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <p><label>Title:</label>
    <input type="text" name="title" id="title" value="<%= @book.title %>"></p>

    <p><label>Author:</label>
    <input type="text" name="author" id="author" value="<%= @book.author %>"></p>

    <p><label>Genre:</label>
    <input type="text" name="genre" id="genre" value="<%= @book.genre %>"></p>

    <p><label>Summary:</label>
    <input type="text" name="summary" id="summary" value="<%= @book.summary %>"></p>

    <p><input type="submit" value="Submit" id="submit"></p>

</form>